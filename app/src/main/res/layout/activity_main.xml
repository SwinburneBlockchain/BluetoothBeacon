<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swinblockchain.bluetoothbeacon.UI.MainActivity">

    <TextView
        android:id="@+id/producerName"
        android:layout_width="222dp"
        android:layout_height="29dp"
        android:text="Producer:"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/adminButton"
        android:layout_marginBottom="7dp" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:onClick="startAdmin"
        android:text="ADMIN"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <ScrollView
        android:id="@+id/textAreaScroller"
        android:layout_width="361dp"
        android:layout_height="485dp"
        android:layout_x="0px"
        android:layout_y="25px"
        android:gravity="bottom"
        android:maxLines="99999999"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/adminButton"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="-22dp"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:id="@+id/consoleWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Console\n"
            android:textSize="8sp" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>
